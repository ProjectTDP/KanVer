# ========================================
# DATABASE CONFIGURATION
# ========================================
# PostgreSQL Database Settings
POSTGRES_DB=kanver_db
POSTGRES_USER=kanver_user
POSTGRES_PASSWORD=change_this_password_in_production
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Full Database URL (auto-generated from above)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ========================================
# JWT CONFIGURATION
# ========================================
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ========================================
# APPLICATION SETTINGS
# ========================================
APP_NAME=KanVer
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# Backend Port
BACKEND_PORT=8000

# CORS Settings (for Flutter app)
#CORS_ORIGINS=["http://localhost:*", "https://localhost:*"]

# SMS/OTP Settings (for future implementation)
#SMS_API_KEY=your_sms_api_key
#SMS_SENDER_ID=KANVER

# Firebase Cloud Messaging (for push notifications)
#FCM_SERVER_KEY=your_fcm_server_key

# Google Maps API
#GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# ========================================
# REDIS CONFIGURATION (Optional)
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/0

# File Upload Settings
#MAX_UPLOAD_SIZE=5242880  # 5MB in bytes
#UPLOAD_DIR=./uploads

# Email Settings (for future notifications)
#SMTP_HOST=smtp.gmail.com
#SMTP_PORT=587
#SMTP_USER=your_email@gmail.com
#SMTP_PASSWORD=your_app_password

# Logging
LOG_LEVEL=INFO 